// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  super_admin
  company_admin
  hr_manager
  manager
  employee
}

enum CompanyStatus {
  active
  suspended
  archived
}

model Company {
  id            String         @id @default(uuid())
  name          String         @db.VarChar(150)
  code          String?        @unique          // short code like "PHL" or "BHINV"
  logoUrl       String?
  industry      String?
  address       String?
  city          String?
  country       String?
  planExpiresAt DateTime?
  maxEmployees  Int?
  status        CompanyStatus  @default(active)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  // Relations
  users         User[]
  departments   Department[]
  designations  Designation[]

  @@index([name])
  @@index([status])
  @@index([industry])
  @@index([country])
  @@map("companies")
}

model User {
  id          String    @id @default(uuid())
  email       String    @unique
  password    String    // hashed with bcrypt
  fullName    String?
  phone       String?   @db.VarChar(20)
  avatarUrl   String?   // optional profile photo
  role        UserRole  @default(employee)
  // Multi-tenant
  companyId   String?         // null for super_admin
  company     Company?        @relation(fields: [companyId], references: [id])
  // Account status
  isActive    Boolean   @default(true)
  lastLoginAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([email])
  @@index([role])
  @@index([companyId])
  @@index([isActive])
  @@index([companyId, role])
  @@map("users")
}

model Department {
  id          String   @id @default(uuid())
  companyId   String
  company     Company  @relation(fields: [companyId], references: [id])
  name        String   @db.VarChar(100)   // e.g. "Human Resources"
  code        String?  @db.VarChar(20)    // e.g. "HR", "DEV"
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // A company cannot have two departments with same name/code
  @@unique([companyId, name])
  @@unique([companyId, code])
  @@index([companyId, isActive])
  @@map("departments")
}

model Designation {
  id          String   @id @default(uuid())
  companyId   String
  company     Company  @relation(fields: [companyId], references: [id])
  name        String   @db.VarChar(100)   // e.g. "Software Engineer", "Senior Manager"
  code        String?  @db.VarChar(20)    // e.g. "SE", "SM", "HR_EXEC"
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // A company cannot have two designations with same name/code
  @@unique([companyId, name])
  @@unique([companyId, code])
  @@index([companyId, isActive])
  @@map("designations")
}
