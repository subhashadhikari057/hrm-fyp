// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  super_admin
  company_admin
  hr_manager
  manager
  employee
}

enum CompanyStatus {
  active
  suspended
  archived
}

enum EmployeeStatus {
  active
  on_leave
  terminated
}

enum EmploymentType {
  full_time
  part_time
  contract
  intern
}

enum Gender {
  male
  female
  other
}

model Company {
  id            String         @id @default(uuid())
  name          String         @db.VarChar(150)
  code          String?        @unique          // short code like "PHL" or "BHINV"
  logoUrl       String?
  industry      String?
  address       String?
  city          String?
  country       String?
  planExpiresAt DateTime?
  maxEmployees  Int?
  status        CompanyStatus  @default(active)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  // Relations
  users         User[]
  departments   Department[]
  designations  Designation[]
  workShifts    WorkShift[]
  employees     Employee[]

  @@index([name])
  @@index([status])
  @@index([industry])
  @@index([country])
  @@map("companies")
}

model User {
  id          String    @id @default(uuid())
  email       String    @unique
  password    String    // hashed with bcrypt
  fullName    String?
  phone       String?   @db.VarChar(20)
  avatarUrl   String?   // optional profile photo
  role        UserRole  @default(employee)
  // Multi-tenant
  companyId   String?         // null for super_admin
  company     Company?        @relation(fields: [companyId], references: [id])
  // Account status
  isActive    Boolean   @default(true)
  lastLoginAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([email])
  @@index([role])
  @@index([companyId])
  @@index([isActive])
  @@index([companyId, role])
  employee      Employee?
  @@map("users")
}

model Department {
  id          String   @id @default(uuid())
  companyId   String
  company     Company  @relation(fields: [companyId], references: [id])
  name        String   @db.VarChar(100)   // e.g. "Human Resources"
  code        String?  @db.VarChar(20)    // e.g. "HR", "DEV"
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // A company cannot have two departments with same name/code
  @@unique([companyId, name])
  @@unique([companyId, code])
  @@index([companyId, isActive])
  employees     Employee[]
  @@map("departments")
}

model Designation {
  id          String   @id @default(uuid())
  companyId   String
  company     Company  @relation(fields: [companyId], references: [id])
  name        String   @db.VarChar(100)   // e.g. "Software Engineer", "Senior Manager"
  code        String?  @db.VarChar(20)    // e.g. "SE", "SM", "HR_EXEC"
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // A company cannot have two designations with same name/code
  @@unique([companyId, name])
  @@unique([companyId, code])
  @@index([companyId, isActive])
  employees     Employee[]
  @@map("designations")
}

model WorkShift {
  id          String   @id @default(uuid())
  companyId   String
  company     Company  @relation(fields: [companyId], references: [id])
  name        String   @db.VarChar(100)
  code        String?  @db.VarChar(20)
  description String?
  startTime   DateTime @db.Time
  endTime     DateTime @db.Time
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([companyId, name])
  @@unique([companyId, code])
  @@index([companyId, isActive])
  employees   Employee[]
  @@map("work_shifts")
}

model Employee {
  id            String         @id @default(uuid())
  // Relations
  userId        String         @unique
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  companyId     String
  company       Company        @relation(fields: [companyId], references: [id])
  departmentId  String?
  department    Department?    @relation(fields: [departmentId], references: [id])
  designationId String?
  designation   Designation?   @relation(fields: [designationId], references: [id])
  workShiftId   String?
  workShift     WorkShift?     @relation(fields: [workShiftId], references: [id])
  
  // Core HR identity
  employeeCode  String         // e.g. "EMP-0001"
  firstName     String         @db.VarChar(80)
  lastName      String         @db.VarChar(80)
  middleName    String?        @db.VarChar(80)
  gender        Gender?
  dateOfBirth   DateTime?
  
  // Job & employment
  joinDate        DateTime?
  probationEnd    DateTime?
  employmentType  EmploymentType?
  locationId      String?              // (optional future relation to CompanyLocation)
  
  // Contacts
  workEmail      String?
  personalEmail  String?
  phone          String?        @db.VarChar(20)
  address        String?
  emergencyContactName  String?
  emergencyContactPhone String? @db.VarChar(20)
  
  // Profile image
  imageUrl     String?                 // e.g. "employees/emp-0001.jpg" or full CDN URL
  
  // Payroll starter fields
  baseSalary   Float?
  
  // Status & audit
  status       EmployeeStatus @default(active)
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt

  @@unique([companyId, employeeCode])        // code unique per company
  @@index([companyId])
  @@index([companyId, departmentId])
  @@index([companyId, designationId])
  @@index([companyId, workShiftId])
  @@index([companyId, status])
  @@index([companyId, employmentType])
  @@map("employees")
}
