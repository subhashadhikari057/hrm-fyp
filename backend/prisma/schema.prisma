// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  super_admin
  company_admin
  hr_manager
  manager
  employee
}

enum CompanyStatus {
  active
  suspended
  archived
}

enum EmployeeStatus {
  active
  on_leave
  terminated
}

enum EmploymentType {
  full_time
  part_time
  contract
  intern
}

enum Gender {
  male
  female
  other
}

model Company {
  id            String         @id @default(uuid())
  name          String         @db.VarChar(150)
  code          String?        @unique          // short code like "PHL" or "BHINV"
  logoUrl       String?
  industry      String?
  address       String?
  city          String?
  country       String?
  planExpiresAt DateTime?
  maxEmployees  Int?
  status        CompanyStatus  @default(active)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  // Relations
  users         User[]
  departments   Department[]
  designations  Designation[]
  workShifts    WorkShift[]
  employees     Employee[]
  attendanceDays AttendanceDay[]
  attendanceLogs AttendanceLog[]
  attendanceRegularizations AttendanceRegularization[]

  @@index([name])
  @@index([status])
  @@index([industry])
  @@index([country])
  @@map("companies")
}

model User {
  id          String    @id @default(uuid())
  email       String    @unique
  password    String    // hashed with bcrypt
  fullName    String?
  phone       String?   @db.VarChar(20)
  avatarUrl   String?   // optional profile photo
  role        UserRole  @default(employee)
  // Multi-tenant
  companyId   String?         // null for super_admin
  company     Company?        @relation(fields: [companyId], references: [id])
  // Account status
  isActive    Boolean   @default(true)
  lastLoginAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  employee              Employee?
  attendanceDaysCreated AttendanceDay[] @relation("AttendanceDayCreatedBy")
  attendanceDaysUpdated AttendanceDay[] @relation("AttendanceDayUpdatedBy")
  refreshTokens         RefreshToken[]
  reviewedRegularizations AttendanceRegularization[] @relation("regularizationReviewedBy")

  @@index([email])
  @@index([role])
  @@index([companyId])
  @@index([isActive])
  @@index([companyId, role])
  @@map("users")
}

model RefreshToken {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tokenHash String
  expiresAt DateTime
  revokedAt DateTime?
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([expiresAt])
  @@map("refresh_tokens")
}

model Department {
  id          String   @id @default(uuid())
  companyId   String
  company     Company  @relation(fields: [companyId], references: [id])
  name        String   @db.VarChar(100)   // e.g. "Human Resources"
  code        String?  @db.VarChar(20)    // e.g. "HR", "DEV"
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // A company cannot have two departments with same name/code
  @@unique([companyId, name])
  @@unique([companyId, code])
  @@index([companyId, isActive])
  employees     Employee[]
  @@map("departments")
}

model Designation {
  id          String   @id @default(uuid())
  companyId   String
  company     Company  @relation(fields: [companyId], references: [id])
  name        String   @db.VarChar(100)   // e.g. "Software Engineer", "Senior Manager"
  code        String?  @db.VarChar(20)    // e.g. "SE", "SM", "HR_EXEC"
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // A company cannot have two designations with same name/code
  @@unique([companyId, name])
  @@unique([companyId, code])
  @@index([companyId, isActive])
  employees     Employee[]
  @@map("designations")
}

model WorkShift {
  id          String   @id @default(uuid())
  companyId   String
  company     Company  @relation(fields: [companyId], references: [id])
  name        String   @db.VarChar(100)
  code        String?  @db.VarChar(20)
  description String?
  startTime   DateTime @db.Time
  endTime     DateTime @db.Time
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([companyId, name])
  @@unique([companyId, code])
  @@index([companyId, isActive])
  employees      Employee[]
  attendanceDays AttendanceDay[]
  @@map("work_shifts")
}

model Employee {
  id            String         @id @default(uuid())
  // Relations
  userId        String         @unique
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  companyId     String
  company       Company        @relation(fields: [companyId], references: [id])
  departmentId  String?
  department    Department?    @relation(fields: [departmentId], references: [id])
  designationId String?
  designation   Designation?   @relation(fields: [designationId], references: [id])
  workShiftId   String?
  workShift     WorkShift?     @relation(fields: [workShiftId], references: [id])
  
  // Core HR identity
  employeeCode  String         // e.g. "EMP-0001"
  firstName     String         @db.VarChar(80)
  lastName      String         @db.VarChar(80)
  middleName    String?        @db.VarChar(80)
  gender        Gender?
  dateOfBirth   DateTime?
  
  // Job & employment
  joinDate        DateTime?
  probationEnd    DateTime?
  employmentType  EmploymentType?
  locationId      String?              // (optional future relation to CompanyLocation)
  
  // Contacts
  workEmail      String?
  personalEmail  String?
  phone          String?        @db.VarChar(20)
  address        String?
  emergencyContactName  String?
  emergencyContactPhone String? @db.VarChar(20)
  
  // Profile image
  imageUrl     String?                 // e.g. "employees/emp-0001.jpg" or full CDN URL
  
  // Payroll starter fields
  baseSalary   Float?
  
  // Status & audit
  status       EmployeeStatus @default(active)
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt

  // Relations
  attendanceDays AttendanceDay[]
  attendanceLogs AttendanceLog[]
  attendanceRegularizations AttendanceRegularization[]

  @@unique([companyId, employeeCode])        // code unique per company
  @@index([companyId])
  @@index([companyId, departmentId])
  @@index([companyId, designationId])
  @@index([companyId, workShiftId])
  @@index([companyId, status])
  @@index([companyId, employmentType])
  @@map("employees")
}

enum AttendanceStatus {
  PRESENT
  LATE
  HALF_DAY
  ABSENT
  ON_LEAVE
  WEEKEND
  HOLIDAY
}

enum AttendanceSource {
  SELF
  ADMIN
  IMPORT
}

enum AttendanceLogType {
  CHECK_IN
  CHECK_OUT
}

enum AttendanceLogMethod {
  WEB
  ADMIN
  IMPORT
}

enum RegularizationRequestType {
  MISSED_CHECKIN
  MISSED_CHECKOUT
  WRONG_TIME
  FULL_DAY_EDIT
}

enum RegularizationStatus {
  PENDING
  APPROVED
  REJECTED
  CANCELLED
}

model AttendanceDay {
  id               String           @id @default(uuid())
  companyId        String
  company          Company          @relation(fields: [companyId], references: [id])
  employeeId       String
  employee         Employee         @relation(fields: [employeeId], references: [id])
  workShiftId      String?
  workShift        WorkShift?       @relation(fields: [workShiftId], references: [id])
  date             DateTime         // stored as UTC start-of-day
  checkInTime      DateTime?
  checkOutTime     DateTime?
  totalWorkMinutes Int              @default(0)
  lateMinutes      Int              @default(0)
  overtimeMinutes  Int              @default(0)
  status           AttendanceStatus
  source           AttendanceSource @default(SELF)
  notes            String?
  createdById      String?
  createdBy        User?            @relation("AttendanceDayCreatedBy", fields: [createdById], references: [id])
  updatedById      String?
  updatedBy        User?            @relation("AttendanceDayUpdatedBy", fields: [updatedById], references: [id])
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt

  logs             AttendanceLog[]
  regularizations  AttendanceRegularization[]

  @@unique([employeeId, date])
  @@index([companyId, date])
  @@index([companyId, employeeId, date])
  @@map("attendance_days")
}

model AttendanceLog {
  id          String              @id @default(uuid())
  companyId   String
  company     Company             @relation(fields: [companyId], references: [id])
  employeeId  String
  employee    Employee            @relation(fields: [employeeId], references: [id])
  attendanceDayId String?
  attendanceDay   AttendanceDay?  @relation(fields: [attendanceDayId], references: [id])
  timestamp   DateTime
  type        AttendanceLogType
  method      AttendanceLogMethod
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime            @default(now())

  @@index([companyId, employeeId, timestamp])
  @@map("attendance_logs")
}

model AttendanceRegularization {
  id                   String                   @id @default(uuid())
  companyId            String
  company              Company                  @relation(fields: [companyId], references: [id])
  employeeId           String
  employee             Employee                 @relation(fields: [employeeId], references: [id])
  attendanceDayId      String?
  attendanceDay        AttendanceDay?           @relation(fields: [attendanceDayId], references: [id])
  date                 DateTime
  requestType          RegularizationRequestType
  requestedCheckInTime DateTime?
  requestedCheckOutTime DateTime?
  reason               String
  status               RegularizationStatus     @default(PENDING)
  reviewedBy           String?
  reviewedByUser       User?                    @relation("regularizationReviewedBy", fields: [reviewedBy], references: [id])
  reviewedAt           DateTime?
  reviewNote           String?
  beforeSnapshot       Json?
  afterSnapshot        Json?
  createdAt            DateTime                 @default(now())
  updatedAt            DateTime                 @updatedAt

  @@index([companyId, employeeId, date])
  @@index([status, date])
  @@map("attendance_regularizations")
}
